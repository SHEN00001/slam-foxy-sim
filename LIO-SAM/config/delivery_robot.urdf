    </inertial>
  </link>

  <joint name="rear_caster_wheel_joint" type="fixed">
    <parent link="base_link"/>
    <child link="rear_caster_wheel"/>
    <origin xyz="-0.12 0 -0.025" rpy="0 0 0"/>
  </joint>

  <!-- 激光雷达（顶层中间位置） -->
  <link name="velodyne">
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <cylinder radius="0.052" length="0.072"/>
      </geometry>
      <material name="black"/>
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <cylinder radius="0.052" length="0.072"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="0.83"/>
      <inertia ixx="0.001" ixy="0.0" ixz="0.0" iyy="0.001" iyz="0.0" izz="0.001"/>
    </inertial>
  </link>

  <joint name="velodyne_joint" type="fixed">
    <parent link="platform_layer_3"/>
    <child link="velodyne"/>
    <origin xyz="0 0 0.046" rpy="0 0 0"/>
  </joint>

  <!-- 摄像头（中间层前部） -->
  <link name="camera_link">
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <box size="0.03 0.08 0.03"/>
      </geometry>
      <material name="black"/>
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <box size="0.03 0.08 0.03"/>
